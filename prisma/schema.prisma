generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id        Int        @id @default(autoincrement())
  nome      String
  email     String
  password  String
  cpf       String?
  role      Int?       
  processos Processo[] // Adiciona um campo de relação para indicar que um usuário pode ter vários processos

  @@map("users")
}

model Processo {
  id       Int    @id @default(autoincrement())
  nup      String
  dia      DateTime
  hora     String
  statusProcess   String
  userId   Int    // Adiciona uma chave estrangeira que referencia o id do User
  tarefadId String
  user     User   @relation(fields: [userId], references: [id]) // Define a relação com o modelo User

  @@map("processos")
}

model salarioMinimo {
  id       Int    @id @default(autoincrement())
  
  ano      String

  valor    String

   @@map("salariominimo")
}